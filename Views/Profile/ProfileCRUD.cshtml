@{
    ViewData [ "Title" ] = "ABM PERFILES";
}
<form action="/" method="post">
    <div class="container-fluid">
        <div class="container-fluid">
            <div class=" col-12 col-lg-6 ">
                <label for="inputRazonSocial" class="form-label">Razón Social</label>
                <input type="text" class="form-control" id="inputRazonSocial">
            </div>
            <div class="col-12 col-lg-6 mt-lg-3">
                <label for="inputCUIT" class="form-label">CUIT</label>
                <input type="number" class="form-control" id="inputCUIT">
            </div>
            <div class="col-12 col-lg-6 mt-lg-3">
                <label for="inputFiActividades" class="form-label">Fecha inicio de actividades</label>
                <input type="date" class="form-control" id="inputFiActividades">
            </div>


            <div class="col-12 col-lg-6 mt-lg-3">
                <label for="inputCategoria" class="form-label">Categoria</label>
                <select id="inputCategoria" class="form-select">
                    <option selected disabled>Seleccione una categoria</option>
                    <option value="A">A</option>
                    <option value="B">B</option>
                    <option value="C">C</option>
                    <option value="D">D</option>
                    <option value="E">E</option>
                    <option value="F">F</option>
                    <option value="G">G</option>
                    <option value="H">H</option>
                    <option value="I">I</option>
                    <option value="J">J</option>
                    <option value="K">K</option>
                </select>
            </div>
            <div class="col-12 col-lg-6 mt-lg-3">
                <label for="inputActividad" class="form-label">Actividad Principal</label>
                <select id="inputCategoria" class="form-select">
                    <option selected disabled>Seleccione una actividad</option>
                    <option value="1">Venta de cosas muebles</option>
                    <option value="2">Locación de servicios</option>

                </select>
            </div>
            <div class="col-12 col-lg-6 mt-lg-3">
                <label for="inputIIBB" class="form-label">Ingresos brutos totales últimos 12 meses</label>
                <input type="number" class="form-control" id="inputIIBB">
            </div>
            <div class="col-12 col-lg-6 mt-lg-3">
                <label for="inputCompras" class="form-label">Compras totales últimos 12 meses</label>
                <input type="number" class="form-control" id="inputCompras">
            </div>
            <div class="col-12 col-lg-6 mt-lg-3">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="ToggleActivo" checked>
                    <label class="form-check-label" for="ToggleActivo">Activo</label>
                </div>
            </div>
            <div class="row row-cols-auto g-4 mt-3 ">
                <div class="col">
                    <a class="btn btn-outline-success" data-bs-toggle="tooltip" data-bs-placement="top" role="button" Type="submit" title="Guardar Perfil" asp-controller="Profile" asp-action="Profiles">
                        <i class="bi bi-floppy2-fill"></i>
                        <p class="d-none d-md-block d-lg-inline"> Guardar</p>
                        </i>
                    </a>
                </div>

                <div class="col">
                    <a class="btn btn-dark" data-bs-toggle="tooltip" data-bs-placement="top" role="button" title="Volver a la Perfiles" asp-controller="Profile" asp-action="Profiles">
                        <i class="bi bi-box-arrow-in-left"></i>

                        <p class="d-none d-md-block d-lg-inline"> Cancelar</p>
                        </i>
                    </a>

                </div>
            </div>



        </div>
    </div>

</form>