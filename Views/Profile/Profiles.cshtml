@{
    var Perfiles = TempData [ "Perfiles" ] as List<Profile>;
    var Mensaje = TempData [ "Mensaje" ] as string;
}
@if (Mensaje != null)
{
    <div class="container-fluid">
        <div class="row align-items-lg-end">
            <div class="col-6 offset-6" id="PlaceHolderAlert">
                <div class="alert alert-success alert-dismissible" role="alert">
                    @Mensaje
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"> </button>
                </div>
            </div>
        </div>
    </div>

}

<div class="container-fluid">
    <div class="col">
        <div class="row row-cols-auto g-2">
            <div class="col">
                <a class="btn btn-outline-success" data-bs-toggle="tooltip" data-bs-placement="top" role="button" title="Agregar Perfil" asp-controller="Profile" asp-action="Nuevo">
                    <i class="bi bi-person-plus-fill">
                        <p class="d-none d-md-block d-lg-inline"> Nuevo</p>
                    </i>
                </a>
            </div>

            <div class="col">
                <a class="btn btn-outline-dark" data-bs-toggle="tooltip" data-bs-placement="top" role="button" title="Exportar a Excel Perfil" asp-controller="Profile" asp-action="ExpExcel">
                    <i class="bi bi-file-earmark-excel-fill">

                        <p class="d-none d-md-block d-lg-inline"> Exportar a Excel</p>
                    </i>
                </a>

            </div>
            <div class="col">
                <a class="btn btn-outline-dark" data-bs-toggle="tooltip" data-bs-placement="top" role="button" title="Exportar a PDF" asp-controller="Profile" asp-action="ExpPDF">
                    <i class="bi bi-file-earmark-pdf-fill">

                        <p class="d-none d-md-block d-lg-inline">Exportar a PDF</p>
                    </i>
                </a>

            </div>
        </div>

    </div>
    <div class="table-responsive-md mt-1">
        <table class="table table-bordered table-striped table-hover ">
            <th>Acción</th>
            <th>Código</th>
            <th>Razón social</th>
            <th>CUIT</th>
            <th>Actividad</th>
            <th>Categoria</th>
            <th>IIBB Umos 12 meses</th>
            <th>Compras Umos 12 meses</th>
            <th>Activo</th>
            <tdoby>
                @foreach (Profile pro in Perfiles)
                {
                    <tr>
                        <td class="g-1">
                            <a class="btn btn-outline-success" data-bs-toggle="tooltip" data-bs-placement="top" role="button" title="Editar perfil" asp-controller="Profile" asp-action="Editar">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a class="btn btn-outline-danger" data-bs-toggle="tooltip" data-bs-placement="top" role="button" title="Eliminar perfil" asp-controller="Profile" asp-action="Elimiar">

                                <i class="bi bi-trash3-fill"></i>
                            </a>
                        </td>
                        <td>@pro.Codigo</td>
                        <td>@pro.RazonSocial</td>
                        <td>@pro.Cuit</td>
                        <td>@pro.Actividad</td>
                        <td>@pro.Categoria</td>
                        <td>$@pro.Iibb</td>
                        <td>$@pro.Compras</td>
                        <td>
                            <div class="col-12 col-lg-6 mt-lg-3">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" role="switch" id="ToggleActivo" checked disabled>
                                </div>
                        </td>

                    </tr>
                }


            </tdoby>
        </table>

    </div>
</div>