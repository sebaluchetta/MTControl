<!DOCTYPE html>

<html lang="es-ar">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MTControl</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/MTControl.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100 position-relative container-fluid">
    <header>
        <nav class="navbar navbar-expand-lg navbar-toggleable-sm navbar-expand-sm   navbar-light bg-light border-bottom box-shadow mb-3 ">
            <div class="container-fluid ">
                <img src="~/img/logo.svg" alt="Logo" class="img-fluid" />
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 nav-tabs justify-content-center">
                        <li class="nav-item">
                            <a class="nav-link text-dark ps-5 ms-5"  asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark ps-5 ms-5"  asp-controller="Profile" asp-action="Profiles">Perfiles</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark ps-5 ms-5"  asp-controller="Report" asp-action="Report">Informes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark ps-5 ms-5"  asp-controller="Home" asp-action="Faqs">Ayuda</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark ps-5 ms-5"  asp-controller="Home" asp-action="About">Acerca de</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class=" flex-grow-1">

            @RenderBody()


        </main>
    </div>

  
    <footer class="container-fluid py-3  mt-auto  d-lg-block ">
        <div class="container d-flex flex-wrap justify-content-between align-items-center py-4">

            
            <div class="d-flex align-items-center gap-3">
                <img src="~/img/logo.svg" alt="Logo" class="img-fluid" style="height: 40px;" />
                <h2 class="h5 mb-0">Tech Para Contadores</h2>
            </div>

            
            <div class="d-flex align-items-center gap-3 flex-wrap justify-content-center text-center">
                <h2 class="h6 mb-0">Contacto:</h2>
                <a href="https://www.facebook.com/tpc">
                    <img src="~/img/facebook.svg" alt="Facebook" class="img-fluid" style="height: 24px;" />
                </a>
                <a href="https://www.twitter.com/tpc">
                    <img src="~/img/x.svg" alt="X" class="img-fluid" style="height: 24px;" />
                </a>
                <a href="https://whatapp">
                    <img src="~/img/whastapp.svg" alt="WhatsApp" class="img-fluid" style="height: 24px;" />
                </a>
                <a href="https://www.instagram.com/tpc">
                    <img src="~/img/instagram.svg" alt="Instagram" class="img-fluid" style="height: 24px;" />
                </a>
                <a href="mailto:tpc@gmail.com">
                    <img src="~/img/mail.svg" alt="Email" class="img-fluid" style="height: 24px;" />
                </a>
            </div>
        </div>

        <div class="text-center pb-3">
            <h6 class="mb-0">© 2025 Reservados todos los derechos</h6>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
